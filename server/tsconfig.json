{
  "compilerOptions": {
    "target": "ES2020",                         /* Specify ECMAScript target version */
    "module": "CommonJS",                      /* Specify module code generation */
    "outDir": "./dist",                        /* Redirect output structure to the directory */
    "rootDir": "./src",                        /* Specify the root directory of source files */
    "strict": true,                            /* Enable all strict type-checking options */
    "esModuleInterop": true,                   /* Enable compatibility with CommonJS modules */
    "skipLibCheck": true,                      /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true,  /* Ensure that casing is consistent */
    "resolveJsonModule": true,                 /* Allow importing .json files */
    "sourceMap": true    ,
    "allowSyntheticDefaultImports": true,                        /* Emit sourcemaps for debugging */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}